{
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "backend/monolithic_app/Dockerfile",
    "buildCommand": "docker build -t causehive-monolith ."
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/api/ready/",
    "healthcheckTimeout": 100
  }
}
